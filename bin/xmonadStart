#!/bin/bash

xrdb -merge .Xresources

# this needs to be before xmonad, because otherwise the screens aren't sized correctly
gnome-settings-daemon

# This must be started before seahorse-daemon.
eval $(gnome-keyring-daemon --start)
export GNOME_KEYRING_SOCKET
export GNOME_KEYRING_PID
# start seahorse-daemon, gnomes keyring
seahorse-daemon

# previously in xmonad.hs startup
trayer --edge bottom --align right --SetDockType true --widthtype pixel --width 192 --heighttype pixel --height 22 --tint 0x000000 --alpha 0 --transparent true &
dropbox start &
gnome-screensaver &
gnome-volume-control-applet &
gnome-power-manager &
nm-applet --sm-disable &
workrave &


exec /usr/bin/xmonad

